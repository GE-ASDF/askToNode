<%- include ('partials/header.ejs'); %>
<body>

    <div style="height: 100vh;" class="container-fluid">
        
        <%- include ('partials/navbar.ejs'); %>
        
        <section class="container mt-4">
            <div class="card-header">
                <div class="form-group">
                    <h3 class="title">Fazer pergunta</h3>
                </div>
            </div>
            
            <form method="POST" action="/salvarpergunta">
           
                <div class="form-group">
                    <label id="titulo" for="">Título da pergunta</label>
                    <input id="titulo" name="titulo" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea name="descricao" id="descricao" cols="4" rows="5" class="form-control"> </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary"> Enviar </button>
                </div>

            </form>
            
        </section>
    </div>

<%- include ('partials/footer.ejs'); %>